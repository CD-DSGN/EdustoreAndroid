<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_subscription_course_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="14dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="数学"
        android:textColor="#000000"
        android:textSize="14dp"
        />

    <TextView
        android:id="@+id/tv_subscription_teacher_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="14dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="张老师"
        android:textColor="#000000"
        android:textSize="14dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_gravity="center_vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_subscription"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/filter_blue_btn"
            android:gravity="center"
            android:text="@string/add_subscription"
            android:textColor="#ffffff"
            android:textSize="8dp"/>

        <Button
            android:id="@+id/btn_unsubscription"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/filter_blue_btn"
            android:gravity="center"
            android:text="@string/unscription"
            android:textColor="#ffffff"
            android:textSize="8dp"/>
    </LinearLayout>

</LinearLayout>