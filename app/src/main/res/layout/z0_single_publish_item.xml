<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="9.5dp"
            android:paddingLeft="12.5dp"
            android:paddingRight="18.5dp"
            android:paddingTop="12.5dp">

            <!--        <com.grandmagic.edustore.view.CircularImage
                        android:id="@+id/teacher_img"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:scaleType="fitXY" />-->
            <ImageView
                android:id="@+id/teacher_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_no_avarta_icon"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <RelativeLayout

                    android:id="@+id/ll_replay_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/teacher_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="张老师"
                        android:textColor="#6b8747"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/delete"
                        android:textColor="#516792"
                        android:textSize="10sp"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/publish_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:text="2015-12-31 12:30"
                    android:textColor="#8e8e8e"
                    android:textSize="9.5sp"/>

                <TextView

                    android:id="@+id/comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text="阿呆沙发是大法师大法是否是大法师大法大术发达省份撒旦发所发生的阿斯大法阿斯顿发生大法是否发生发送方阿斯顿发生大法"
                    android:textColor="#505050"
                    android:textSize="12sp"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/imagelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="20dp"
        android:gravity="start"
        android:orientation="horizontal"
        >
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#cccccc"
        />
    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginRight="18.5dp"
        android:layout_marginTop="5dp"
        android:text="@string/comment"
        android:textColor="#516792"
        android:textSize="10sp"
        />
    <LinearLayout
        android:id="@+id/commentlayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="9.5dp"
        android:paddingLeft="12.5dp"
        android:paddingRight="18.5dp"
        android:paddingTop="12.5dp"
        android:layout_height="wrap_content">

    </LinearLayout>
</LinearLayout>