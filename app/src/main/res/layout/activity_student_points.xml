<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.grandmagic.edustore.activity.StudentPointsActivity">

    <include layout="@layout/top_view"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.grandmagic.BeeFramework.view.MyListView
            android:id="@+id/lv_student_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/good_list_bg"
            android:divider="#00000000"
            android:scrollbars="none"
            android:visibility="gone"/>

        <include
            android:id="@+id/null_pager"
            layout="@layout/null_pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>
